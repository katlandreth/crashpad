<h3>Edit Your Profile</h3>

<div class="profile-image col-md-4">
  <%= image_tag current_member.profile.image, size: "200x200" %></br>
  <%= link_to 'Edit Profile Picture', edit_profile_path(current_member), class: 'modal-trigger', 'data-toggle' => "modal", 'data-target' => "#myModal", method: 'get', remote: true %></br>
  <%= link_to "Delete Your Profile Picture", profile_remove_image_path(current_member.profile.id), data: { confirm: "You sure?" } %>
</div>

<div class="col-md-8">
  <%= simple_form_for(:profile, url: profile_path, remote: true, html: {id: 'edit_profile'}) do |f| %>
    <%= render partial: 'profiles/form', locals: {f: f} %>
  <% end %>
</div>
