$alert-color: #E6B10A;
$error-color: rgb(139, 24, 32);
$success-color: rgb(65, 161, 240);
$notice-color: rgb(65, 161, 240);
$logo-color: rgb(00, 160, 220);
$action-color-warm: #eb9da2;

html,
body {
  overflow: auto;
}

.splash {
  background:image-url('boho-bedroom.jpg');
  background-size: cover;
  background-position: 0 -500px;
  padding:40px;
  min-height:100vh;
  position:relative;
  .jumbotron {
    background-color: rgba(255,255,255,0.9);
    padding: 48px 70px;
    h1 {
      margin-bottom:30px;
    }
  }
}


h3.guest-link,
h3.host-link {
  display:inline-block;
  margin:20px;
  text-align:center;
}


a.navbar-brand {
  padding: 5px;
}

.navbar-brand {
  height: 75px;
  position: relative;
  top:20px;
  left:20px;
  span{
    vertical-align: bottom;
    color: #2B99FF;
  }
}

.navbar.navbar-default {
  margin-bottom: 0px;
}

.shape {
  height: 50px;
  width: 44px;
  border-top: 3.5px solid #000;
  -moz-transform: rotate(17deg);
  -webkit-transform: rotate(17deg);
  transform: rotate(17deg);
  position:absolute;
  top:13px;
  right:51px;
}

div.flash_success,
div.flash_error,
div.flash_notice,
div.flash_alert,
div.flash_open {
    position: fixed;
    top: 30px;
    left: 50%;
    z-index: 2000;
    transition: all 0.5s ease;
    transform: translate(-50%, -200px);
    text-align: center;
    background: rgb(255, 255, 255) none repeat scroll 0% 0%;
    padding: 20px;
    font-family: "Montserrat";
    text-transform: capitalize;
    animation: show-hide 4s ease;
    &.flash_show {
      transform: translate(-50%, 0);
    }
}

.flash_button,
.scroll_button {
  border-radius: 50%;
  box-shadow: none;
  font-size:25px;
  width:35px;
  height:35px;
  padding: 0px;
  margin:10px;
  line-height:1;
  color:#fff;
  &.flash_success {
    //background: $success-color;
    color: $success-color;
    border: 3px solid $success-color;
  }
  &.flash_error {
    background: $error-color;
    //color: $error-color;
    border: 3px solid $error-color;
  }
  &.flash_notice {
    background: $notice-color;
    //color: $notice-color;
    border: 3px solid $notice-color;
    font-family: monospace;
    font-weight:bold;
    font-size:20px;
  }
  &.flash_alert {
    background: $alert-color;
    //color: $alert-color;
    border: 3px solid $alert-color;
  }
  &.scroll_down {
    background: #fff;
    border: 2px solid $action-color-warm;
    color: $action-color-warm;
    box-shadow: 0 0 3px rgba(0,0,0,0.4);
  }
}

.flash_button {
  transform: translateY(0);
  animation: bounce-in 2s 4s ease-in-out, hide 5s linear;
}

.scroll_down {
  display: block;
  position:absolute;
  bottom: 120px;
  left: 50%;
  margin-left: -17px;
  transform: translateY(0);
  animation: bounce 2s 4s ease-in-out;
}

div.flash_success,
div.flash_notice {
  color: $success-color;
  border: 3px solid $success-color;
  &:before {
    content: '✔';
    font-size: 25px;
    padding:10px;
  }
}

div.flash_notice:before {
  content: "i";
  font-family: monospace;
  line-height:1;
  font-weight:bold;
  font-size:16px;
  text-transform:lowercase;
  color:#fff;
  background-color: $notice-color;
  border-radius:50%;
  width:35px;
  height:35px;
  padding:10px;
  margin-right:10px;
  display:inline-block;
}

div.flash_alert {
  color: #333;
  border: 3px solid $alert-color;
  &:before {
    content: '⚠';
    font-size: 25px;
    padding:10px;
  }
}

div.flash_error {
  color: $error-color;
  border: 3px solid $error-color;
  &:before {
    content: '⦻';
    font-size: 25px;
    padding:10px;
  }
}

.profile-image img {
  border: 3px solid #333;
  margin:10px;
  display:inline-block;
}

.upload-preview img {
  width:200px;
  display: none;
}

div.status-box {
border: 1px solid #333;
}


a.status-box {
  display:inline-block;
}

.modal-body {
  padding:20px;
}

.modal-header {
  background: rgba(0, 0, 0, 0) image-url("watercolor-leaves.jpg") repeat scroll 0 -160px / cover ;
background-size: cover;
}

.modal-dialog {
  width:500px;
}

span.logo-large {
  letter-spacing: -2px;
  color: $logo-color;
  border-top: 5px solid $logo-color;
}

span.logo-small {
  color: $logo-color;
  border-top: 3px solid $logo-color;
}

.btn,
.btn-large {
  border-radius: 1px;
  float:right;
}

.btn-primary {
  color: $action-color-warm;
  border: 1px solid $action-color-warm;
  background: #fff;
  &:hover {
    background: $action-color-warm;
    color:#fff;
    border: 1px solid $action-color-warm;
  }
}

.overlay {
   position:absolute;
   width:100%;
   height:100%;
   z-index:1000;
  /*top:480px;*/  /* your iframe height */
  /* margin-top:-480px;*/  /* your iframe height */
}

.map{
    overflow:hidden;
    padding-bottom:36.25%;
    position:relative;
    height:0;
}
.map iframe{
    left:0;
    top:0;
    height:100%;
    width:100%;
    position:absolute;
}

.row.about {
  padding: 60px 0;
}

.thumbnail {
  overflow: auto;
  img {
    height:300px;
  }
}

.explore,
.locations {
    text-align:center;
    padding:20px;
}

.row.footer {
  min-height:200px;
  background: #fafafa;
  padding: 50px 0;
  text-align: center;
  ul {
    list-style: none;
  }
}


/* ----- Animations ----- */


@keyframes show-hide {
0%,100% {
  transform: translate(-50%, -200px);
 }
10%,90% {
  transform: translate(-50%, 0);
  }
}

@keyframes bounce-in {
  0% {
    transform: translateY(-200px);
  }
  10%, 20%, 48%, 70%, 88%, 100% {
    transform: translateY(0);
  }
  40% {
  transform: translateY(-30px);
  }
  60% {
  transform:translateY(-22px);
  }
  80% {
    transform:translateY(-12px);
  }
}

@keyframes hide {
  0%, 95% {
    opacity: 0;
  }
  100% {
    opacity:1;
  }
}

@keyframes bounce {

  0%, 10%, 20%, 48%, 70%, 88%, 100% {
    transform: translateY(0);
  }

  40% {
  transform: translateY(-30px);
  }
  60% {
  transform:translateY(-22px);
  }
  80% {
    transform:translateY(-12px);
  }
}
